{
    "push": {
      "name": "",
      "vcs": true
    },
    "variables": {
        "atlas_username": "{{env `ATLAS_USERNAME`}}",
        "atlas_name": "{{env `ATLAS_NAME`}}"
    },
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/base.sh",
                "scripts/vboxguest.sh",
                "scripts/vagrant.sh",
                "scripts/dep.sh"
            ],
            "override": {
                "virtualbox-iso": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                }
            }
        }
    ],
    "builders": [{
        "type": "virtualbox-iso",
        "virtualbox_version_file": ".vbox_version",
        "headless": true,

        "guest_os_type": "RedHat_64",
        "disk_size": 20480,

        "iso_url": "http://mirrors.kernel.org/centos/7.1.1503/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
        "iso_checksum": "7c1e34e95c991175290d704dbdcc6531774cbecb",
        "iso_checksum_type": "sha1",

        "boot_command": [
            "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.1-x86_64/ks.cfg<enter><wait>"
        ],
        "boot_wait": "12s",

        "http_directory": "http",
        "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "ssh_port": 22,
        "ssh_wait_timeout": "10000s",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "1024"],
            ["modifyvm", "{{.Name}}", "--cpus", "1"]
        ],

        "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p"
    }],
    "post-processors": [
        [{
            "output": "build/centos-7.1-x86_64.box",
            "type": "vagrant"
        },
        {
            "type": "atlas",
            "only": ["virtualbox-iso"],
            "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
            "artifact_type": "vagrant.box",
            "metadata": {
                 "provider": "virtualbox",
                 "version": "0.1.0"
            }
        }]
    ]
}
